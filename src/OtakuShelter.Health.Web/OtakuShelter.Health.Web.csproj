    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="NetEscapades.Configuration.Yaml" Version="1.6.0" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Properties\launchSettings.json" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="HealthChecks.UI.Client, Version=2.2.2.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\..\..\..\.nuget\packages\aspnetcore.healthchecks.ui.client\2.2.2\lib\netstandard2.0\HealthChecks.UI.Client.dll</HintPath>
    </Reference>
  </ItemGroup>

