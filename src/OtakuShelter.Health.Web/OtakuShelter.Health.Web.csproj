    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
    <RootNamespace>OtakuShelter.Health</RootNamespace>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AspNetCore.HealthChecks.NpgSql" Version="2.2.0" />
    <PackageReference Include="AspNetCore.HealthChecks.UI" Version="2.2.16" />
    <PackageReference Include="AspNetCore.HealthChecks.Uris" Version="2.2.2" />
